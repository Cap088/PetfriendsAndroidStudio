<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Avatar/Icono -->
        <ImageView
            android:id="@+id/ivClientAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Avatar cliente"
            android:src="@drawable/ic_menu_clients" />

        <!-- Información del cliente -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Cliente"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClientCedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cédula: 0000000000"
                android:textColor="@color/azul"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvClientPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono: 0000000000"
                android:textColor="@color/azul"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvClientAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Dirección: Sin dirección"
                android:textColor="@color/azul"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Acciones -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnEditClient"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar cliente"
                android:src="@drawable/ic_edit" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>